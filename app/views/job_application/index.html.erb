<section class="block"><p id="notice"><%= notice %></p></section>
<section class="job-applications block">
  <% if @job_applications %>
    <table>
      <thead class="bg-myorange-500">
      <tr>
        <th>Application date</th>
        <th>Platform</th>
        <th>Company</th>
        <th>Position</th>
        <th>State</th>
        <th colspan="3"></th>
      </tr>
      </thead>
      <tbody>
      <% @job_applications.each do |application| %>
        <tr>
          <td><%= application.application_date %></td>
          <td><%= application.platform %></td>
          <td><%= application.company %></td>
          <td><%= application.position %></td>
          <td><%= application.state %></td>
          <td><%= link_to 'Show', application %></td>
          <td><%= link_to 'Edit', edit_job_application_path(application) %></td>
          <td><%= link_to 'Delete', application,
                          method: :delete,
                          data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  <% else %>
    <p>No applications present</p>
  <% end %>
</section>
<section class="block">
  <%= link_to 'New Job Application', new_job_application_path %>
</section>